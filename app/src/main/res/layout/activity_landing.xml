<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="webdevils.webdevilsapp.LandingActvity"
    android:weightSum="1"
    android:background="#0d2f4c">

    <TextView
        android:text="How Are We Doing?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView5"
        android:layout_weight="0.12"
        android:background="#0d2f4c"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="sans"
        android:textAllCaps="false"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/buttonFeedback"
        android:height="50dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="News text goes here................................."
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView3"
        android:layout_weight="0.33"
        android:layout_alignParentStart="true"
        android:height="134dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_above="@+id/buttonMy" />

    <Button
        android:text="Featured Concepts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFeatured"
        android:layout_weight="0.22"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minHeight="134dp"
        android:textSize="18sp"
        android:background="#222222"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="My Concepts"
        android:layout_width="match_parent"
        android:id="@+id/buttonMy"
        android:layout_weight="0.24"
        android:textColorLink="?attr/colorPrimaryDark"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minHeight="134dp"
        android:background="#f00000"
        android:textSize="18sp"
        android:elevation="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFeatured"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit Feedback"
        android:id="@+id/buttonFeedback"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />
</RelativeLayout>